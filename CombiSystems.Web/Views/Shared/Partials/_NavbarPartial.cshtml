<div class="container">

    <!-- Image Logo -->
    <a class="navbar-brand logo-image" asp-controller="Home" asp-action="Index"><img src="../../User/images/logo.png" alt="alternative"></a>


    <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index" class="nav-link page-scroll active">Home<span class="sr-only">(current)</span></a>
            </li>

            <li class="nav-item">
                <a class="nav-link page-scroll" href="#contact">Contact</a>
            </li>

            @if (@Context.User.Identity!.IsAuthenticated)
            {
                <li class="nav-item">
                    <a asp-controller="User" asp-action="Profile" class="nav-link">Profile</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Logout" class="nav-link">Logout</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Login" class="nav-link">Login</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Register" class="nav-link">Register</a>
                </li>
            }
        </ul>
    </div> <!-- end of navbar-collapse -->
</div> <!-- end of container -->