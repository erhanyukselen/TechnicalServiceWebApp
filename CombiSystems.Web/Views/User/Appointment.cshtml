@model List<CombiSystems.Core.Entities.Appointment>

<div class="row mx-4 my-5">

    <div class="col-md-6 ">
        <div class="white_shd full justify-content-center">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Technical Service Request Form</h2>
                </div>
            </div>

            <div class="login_form">
                <form asp-controller="User" asp-action="Appointment" method="post">

                    <fieldset>
                         <span class="text text-danger" ></span>
                        <div class="field">
                            <label class="label_field">Address</label>
                            <input type="text"  name="Address" placeholder="Address">
                        </div>

                         <span class="text text-danger" ></span>
                        <div class="field">
                            <label class="label_field">Explanation</label>
                            <input type="text"  name="Description" placeholder="Description">
                        </div>

                                <span class="green_color mx-lg-5">@TempData["Success"]</span>

                        <div class="field margin_0">
                            <label class="label_field hidden">hidden label</label>
                            <button type="submit" class="main_bt">Create</button>
                        </div>
                    </fieldset>

                </form>
            </div>


        </div>
    </div>

    <div class="col-md-6">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Hover Table</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <div class="table-responsive-sm">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Description</th>
                                <th>Opening Date</th>
                                <th>Address</th>
                                <th>Task Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in @Model)
                            {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Description</td>
                                <td>@item.AppointentOpeningDate</td>
                                <td>@item.AppointmentAddress</td>
                                <td>@item.TaskStatus</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
